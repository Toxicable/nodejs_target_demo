{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ],
      "baseUrl": ".",
      "paths": {
        "@env": ["./environments/environment"],
        "@project/*": ["projects/*"]
      },
      "lib": [
        "es2017",
        "dom"
      ]
    }
  }
